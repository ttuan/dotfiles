# Path to your oh-my-zsh installation.
export ZSH=~/.oh-my-zsh

# Dotfiles folder
export DOTFILES=~/Dropbox/Projects/dotfiles

# Ack like vim
bindkey -v

ZSH_THEME="agnoster"

export UPDATE_ZSH_DAYS=7

# Plugin
zstyle ':omz:plugins:nvm' lazy yes
plugins=(zsh-autosuggestions vi-mode z asdf nvm)

# User configuration
export PATH="$HOME/.rvm/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin:$HOME/Library/Python/3.9/bin:$PATH"

export EDITOR="nvim"
export TERM="xterm-256color"

zstyle ':omz:update' mode disabled
zstyle ':omz:plugins:nvm' lazy yes
source $ZSH/oh-my-zsh.sh

# Alias
source $DOTFILES/zsh/alias.zsh
source $DOTFILES/zsh/functions.zsh

# FZF functions
source $DOTFILES/zsh/fzf.zsh

# Allow [ or ] whereever you want
unsetopt nomatch

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

bindkey '^ ' autosuggest-execute

source ~/.zshrc.private

prompt_dir() {
  shorten_path=$(echo $PWD | perl -pe "s/(\w)[^\/]+\//\1\//g")
  prompt_segment blue $CURRENT_FG $shorten_path
  # prompt_segment blue $CURRENT_FG ' %20<...<%~%<< '
}
